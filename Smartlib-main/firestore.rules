rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =============================
       AUTHENTICATION GENERAL
    ============================== */

    function isLoggedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isLoggedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    function isActiveUser() {
      return isLoggedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.active == true;
    }

    /* =============================
       USERS COLLECTION
    ============================== */

    match /users/{uid} {

      allow read: if isAdmin();

      allow create: if true; // Register user

      allow update: if isLoggedIn() &&
                      (
                        // User edit data sendiri (kecuali role/active)
                        (request.auth.uid == uid &&
                          !(request.resource.data.role in ["admin", "member"]) &&
                          !(request.resource.data.active in [true, false])
                        )
                        ||
                        // Admin boleh mengubah role & active
                        (isAdmin())
                      );

      allow delete: if false;
    }

    /* =============================
       BOOKS COLLECTION (ADMIN ONLY)
    ============================== */

    match /books/{bookId} {

      allow read: if true;

      allow create, update, delete: if isAdmin();
    }

    /* =============================
       LOANS COLLECTION
    ============================== */

    match /loans/{loanId} {

      allow read: if isAdmin() ||
        (isLoggedIn() && request.auth.uid == resource.data.userId);

      allow create: if isLoggedIn() &&
                     isActiveUser() &&
                     request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin();

      allow delete: if false;
    }

    /* =============================
       REVIEWS COLLECTION
    ============================== */

    match /reviews/{reviewId} {

      allow read: if true;

      allow create: if isLoggedIn() &&
        isActiveUser() &&
        request.resource.data.rating >= 1 &&
        request.resource.data.rating <= 5 &&
        // user harus pernah pinjam buku itu dan return
        exists(
          /databases/$(database)/documents/loans/$(request.resource.data.loanId)
        );

      allow update: if false;
      allow delete: if false;
    }

    /* =============================
       BACKUPS COLLECTION (READ ONLY ADMIN)
    ============================== */

    match /backups/{id} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
